---
import React from "./icons/React.astro"
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React JS",
    class: "bg-[#0970C5] text-white",
    icon: React,
  },
}
const PROJECTS = [
  {
    title: "Chat-Real-Time",
    description:
      "Desarrollada con Next.js, React js, React Native y Tailwind CSS, aplicación que ofrece comunicación en tiempo real entre clientes, mejorando la productividad empresarial. Con una interfaz intuitiva y ágil.",
    github: "https://github.com/deividcool/ChatApi",
    image: "/projects/svgl.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.REACT],
  },
  {
    title: "Aplicacion CRM SMART-SALES",
    description:
      "Plataforma Empresarial de Gestión de Relaciones con el Cliente. Creada desde cero con React Native y Tailwind CSS",
    link: "https://play.google.com/store/apps/details?id=com.smartsalesmobile.appexiware",
    image: "/projects/Smart-Sales-Mobile.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.REACT],
  },
  {
    title: "Coin Base",
    description:
      "Plataforma gratuita donde puedes revisar el estado actual de las monedas crypto. Creada desde cero con Typescript y Tailwind CSS",
    link: "https://github.com/deividcool/CoinBase",
    image: "/projects/CoinBase.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Weather App",
    description:
      "Plataforma gratuita donde puedes revisar el estado del clima en tu ciudad o pais. Creada desde cero con React Native y Tailwind CSS",
    link: "https://github.com/deividcool/WeatherApp",
    image: "/projects/Weather.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "MovieApp",
    description:
      "Plataforma gratuita donde puedes revisar las ultimas tendencias en peliculas. Creada desde cero con React Native y Tailwind CSS",
    link: "https://github.com/deividcool/MovieApp",
    image: "/projects/adventjs.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },

  
]
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Ver código fuente
            </LinkButton>
          )}
          {link && (
          <LinkButton href={link}>
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
              </>
            </svg>
            Ir al sitio web
          </LinkButton>
          )}
        </footer>
      </article>
    ))
  }
</section>
